<p id="notice"><%= notice %></p>

<h1 class="text-center">Invoices</h1><br>

<table class="table table-hover border">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Currency</th>
      <th>Total</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.title %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.deadline %></td>
        <td><%= invoice.currency %></td>
        <td><%= invoice.total %></td>
        <td><%= invoice.start_date.strftime "%a, %-d %b %Y %I:%M %p" %></td>
        <td><%= invoice.end_date.strftime "%a, %-d %b %Y %I:%M %p" %></td>
        <td><%= link_to 'Show', invoice,:class => 'btn blue-gradient waves-effect waves-light' %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice),:class => 'btn peach-gradient waves-effect waves-light' %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger waves-effect waves-light'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center>
<%= link_to 'New Invoice', new_invoice_path, :class => "btn btn--blue btn--stroke btn--stroke--2 px24 py12 txt-s round-full px36" %>
</center>